<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/th_black"
    tools:context=".GoalsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/conthrax"
        android:text="Goal Setting"
        android:textColor="@color/theme"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_bg_th"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:id="@+id/PIContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:ems="10"
                android:hint="Height in cm"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="100dp" />

            <EditText
                android:id="@+id/weightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:ems="10"
                android:hint="Weight in kg"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="146dp" />
            <AutoCompleteTextView
                android:id="@+id/genderInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:ems="10"
                android:hint="Gender"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="146dp" />

            <EditText
                android:id="@+id/ageInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:ems="10"
                android:hint="Age"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="191dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="-10dp"
        android:background="@color/th_black"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Personal information"
        android:textColor="@color/theme"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout6"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_bg_th"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">

        <LinearLayout
            android:id="@+id/PIContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/targetWeightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Target Weight in kg"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="100dp" />

            <EditText
                android:id="@+id/targetCaloriesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:ems="10"
                android:hint="Target Daily Calories"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="146dp" />

            <EditText
                android:id="@+id/targetStepCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:ems="10"
                android:hint="Target Step Count"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="191dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="-10dp"
        android:background="@color/th_black"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Setting Target"
        android:textColor="@color/theme"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/updateGoalsBtn"
        style="@style/Widget.Material3.Button"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/theme"
        android:text="UPDATE GOALS"
        android:textColor="@color/black"
        app:cornerRadius="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>